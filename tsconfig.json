{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["esnext", "ESNext.Array", "dom", "dom.iterable"],
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "paths": {
      "@xixixao/convex-auth/server": ["./src/server/index"],
      "@xixixao/convex-auth/providers/*": ["./src/providers/*"],
      "@xixixao/convex-auth/react": ["./src/react/index"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", "docs", "test"]
}
